<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EscanerTraductor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/light_blue_A400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/material_dynamic_primary60</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EscanerTraductor.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EscanerTraductor.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EscanerTraductor.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.EscanerTraductor.Fullscreen" parent="Theme.EscanerTraductor">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.EscanerTraductor.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.EscanerTraductor.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/primary</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!-- Modo Día -->
    <!-- El fondo se vuelve blanco cuando está en modo diurno -->
    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- El color del texto si el modo nocturno está desactivado -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

</resources>